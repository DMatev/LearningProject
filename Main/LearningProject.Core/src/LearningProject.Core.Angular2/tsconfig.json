{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "watch": false,
    "outDir": "./dist"
  },
  "filesGlob": [
    "./src/app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}